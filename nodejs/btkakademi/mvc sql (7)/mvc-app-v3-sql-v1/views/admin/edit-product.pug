extends ../layouts/main-layout.pug

block content
        form(action="/admin/products" method="POST")

            input(type="hidden" name="id" value=`${product.id}`)

            div.form-group.row
                label(for="name").col-sm-2.col-form-label Name
                div.col-sm-10
                    input(type="text" name="name" value=`${product.name}`).form-control#name
            
            div.form-group.row
                label(for="price").col-sm-2.col-form-label Price
                div.col-sm-10
                    input(type="text" name="price" value=`${product.price}`).form-control#price
            
            div.form-group.row
                label(for="imgUrl").col-sm-2.col-form-label Image Url
                div.col-sm-10
                    input(type="text" name="imgUrl" value=`${product.imgUrl}`).form-control#imgUrl

            div.form-group.row
                label(for="categoryid").col-sm-2.col-form-label Category
                div.col-sm-10
                    select.form-control#categoryid(name="categoryid")
                        option(value="-1") Select Category
                        each category in categories 
                            option(value=`${category.id}`, selected=(category.id===product.categoryid)) #{category.name}


            div.form-group.row
                label(for="description").col-sm-2.col-form-label description
                div.col-sm-10
                    textarea.form-control(name="description", cols="30", rows="10" )  #{product.description}
            
                
            div.form-group.row
                div.col-sm-10.offset-sm-2
                    input(type="submit"  value="Ürünü kaydet").btn.btn-primary
                             
                    