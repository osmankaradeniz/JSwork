mixin createProduct(product)
    div.col-md-4
            div.card.my-3
                img(src=`./img/${product.imgUrl}` alt="").card-img-top
                div.card-body
                    h4.card-title
                        a(href="#").Product #{product.name}
                    p.card-text.pt-2 #{product.description}
                div.card-footer
                    small.text-muted
                        i.fas.fa-lira-sign #{product.price}
                    
                    a(href="#").btn.btn-secondary.btn-sm.float-end
                        i.fa.fa-angles-right Details